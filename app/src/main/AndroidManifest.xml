<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ttu.www.theerrors_fitlyfe">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".CreateAcct" />
        <activity
            android:name=".TermandConditionActivity" />
        <activity
            android:name=".Calorie_Consumption"
            android:label="@string/title_activity_calorie_consumption" />
        <activity
            android:name=".Calorie_Input"
            android:label="@string/title_activity_calorie_input">
        </activity>
        <activity
            android:name=".Water_Consumption"
            android:label="@string/title_activity_water_consumption" />
        <activity
            android:name=".Sleep_Tracking"
            android:label="@string/title_activity_sleep_tracking" />
        <activity
            android:name=".Sleep_Input"
            android:label="@string/title_activity_sleep_input" />
        <activity
            android:name=".Water_Input"
            android:label="@string/title_activity_water_input" />
    </application>

</manifest>